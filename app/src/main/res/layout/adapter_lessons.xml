<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView android:id="@+id/textId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Номер занятия"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView android:id="@+id/textTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Тема занятия"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView android:id="@+id/textDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Дата"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView android:id="@+id/textTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Время"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView android:id="@+id/textStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Статус занятия"
        android:textAppearance="?android:attr/textAppearanceMedium" />

 <TextView android:id="@+id/textIdStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Id ученика"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</LinearLayout>